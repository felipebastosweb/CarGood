@using MeuCarroApp.Shared.Components.Accounts.Records

@inject NavigationManager Navigation

<h3>User Login</h3>
<EditForm Model="LoginInput" OnSubmit="EntrarOnClick">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label class="form-label">Username</label>
        <InputText @bind-Value="LoginInput!.Username" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText @bind-Value="LoginInput!.Password" class="form-control" />
    </div>
    <div class="mb-3 form-check">
        <InputCheckbox @bind-Value="LoginInput!.KeepConnected" class="form-check-input" id="keepConnected" />
        <label class="form-check-label" for="keepConnected">Keep Connected</label>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Confirm</button>
    </div>
</EditForm> 


@code {

    private LoginInput? LoginInput { get; set; } = new()
    {
        Username = string.Empty,
        Password = string.Empty
    };

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private void EntrarOnClick()
    {
        Navigation.NavigateTo("dash");
    }

}
