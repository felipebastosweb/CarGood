
@using MeuCarroApp.Shared.Components.Accounts.Records

@inject NavigationManager Navigation

<div class="border rounded-3 shadow" style="padding: 20px">

    <h3>Sign up</h3>

    <EditForm Model="SignUpInput" OnSubmit="OnSignUpSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="mb-3">
            <label class="form-label">Username</label>
            <InputText @bind-Value="SignUpInput!.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <InputText type="password" @bind-Value="SignUpInput!.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">E-mail</label>
            <InputText @bind-Value="SignUpInput!.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Telephone</label>
            <InputText @bind-Value="SignUpInput!.Telephone" class="form-control" />
        </div>
        <div class="mb-3 form-check">
            <InputCheckbox @bind-Value="SignUpInput!.AcceptTerms" class="form-check-input" id="AcceptTerms" />
            <label class="form-check-label" for="AccepTerms">
                I accept the Use Terms and Privacy Policy. 
            </label>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>

    </EditForm>

</div>


@code
{

    private SignUpInput? SignUpInput { get; set; }

    protected override void OnInitialized()
    {
        // inicializa o formulário
        SignUpInput = new()
        {
            Username = string.Empty,
            Password = string.Empty,
            Email = string.Empty,
            Telephone = string.Empty,
            AcceptTerms = false
        };
        base.OnInitialized();
    }

    protected void OnSignUpSubmit()
    {
        Navigation.NavigateTo("dash");
    }
}
